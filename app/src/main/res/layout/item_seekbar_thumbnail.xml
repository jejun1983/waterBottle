<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

  <RelativeLayout
      android:layout_width="@dimen/m690dp"
      android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m388dp"
        android:background="#000000"
        android:paddingLeft="@dimen/m8dp"
        android:paddingTop="@dimen/m8dp"
        android:paddingRight="@dimen/m8dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/text_time_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m68dp"
        android:layout_below="@id/img_thumbnail"
        android:layout_centerHorizontal="true">

      <com.idevel.waterbottle.widget.CharacterTextView
          android:id="@+id/text_time"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_centerHorizontal="true"
          android:background="#000000"
          android:gravity="center"
          android:lines="1"
          android:paddingLeft="@dimen/m20dp"
          android:paddingRight="@dimen/m20dp"
          android:text="00:00"
          android:textAlignment="center"
          android:textColor="#ffffff"
          android:textSize="@dimen/m42dp" />

    </RelativeLayout>

  </RelativeLayout>

</RelativeLayout>