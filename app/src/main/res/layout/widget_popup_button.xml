<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <!-- 1 button -->
  <com.idevel.waterbottle.utils.font.TypefaceButton
    android:id="@+id/btn_1_close"
    style="@style/PushPopupButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <!-- 2 buttons -->
  <LinearLayout
    android:id="@+id/layout_btn_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.idevel.waterbottle.utils.font.TypefaceButton
      android:id="@+id/btn_2_close"
      style="@style/PushPopupButtonLeft"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1" />

    <ImageView
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:background="#eeeeee" />

    <com.idevel.waterbottle.utils.font.TypefaceButton
      android:id="@+id/btn_2_ok"
      style="@style/PushPopupButtonRight"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1" />
  </LinearLayout>

</FrameLayout>