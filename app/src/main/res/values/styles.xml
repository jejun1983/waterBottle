<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

  <!--
      Base application theme, dependent on API level. This theme is replaced
      by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
  -->

  <!-- Application theme. -->

  <style name="MyAppTheme">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>

    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:backgroundDimEnabled">false</item>
    <item name="android:windowFullscreen">false</item>
  </style>

  <style name="ErrorTitle">
    <item name="android:textSize">15dp</item>
    <item name="android:textColor">#111111</item>
  </style>

  <style name="ErrorButton">
    <item name="android:textSize">16dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:background">@drawable/home_btn_foc</item>
    <item name="android:minWidth">200dp</item>
  </style>

  <!-- push popup -->
  <style name="PushPopupTitleText">
    <item name="android:textSize">24sp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/main_text</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="PushPopupBodyText">
    <item name="android:textSize">16sp</item>
    <item name="android:gravity">center</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:textColor">@color/main_text</item>
  </style>

  <style name="PushPopupButton">
    <item name="android:background">@drawable/selector_popup_btn</item>
    <item name="android:textSize">16sp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/text_pink</item>
    <item name="android:text">@string/popup_btn_ok</item>
  </style>

  <style name="PushPopupButtonLeft">
    <item name="android:background">@drawable/selector_popup_btn_left</item>
    <item name="android:textSize">16sp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/text_grey</item>
    <item name="android:text">@string/popup_btn_close</item>
  </style>

  <style name="PushPopupButtonRight">
    <item name="android:background">@drawable/selector_popup_btn_right</item>
    <item name="android:textSize">16sp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/text_pink</item>
    <item name="android:text">@string/popup_btn_ok</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="PopupButton">
    <item name="android:background">@drawable/selector_popup_btn</item>
    <item name="android:textSize">16sp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/main_text</item>
    <item name="android:text">@string/popup_btn_ok</item>
  </style>

</resources>